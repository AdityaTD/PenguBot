const { Command } = require("discord.js-commando");
const { get } = require("snekfetch");
const { parse } = require("fast-html-parser");

module.exports = class RandomFactCMD extends Command {

    constructor(client) {
        super(client, {
            name: "trumpquote",
            group: "fun",
            aliases: ["trump"],
            memberName: "trumpquote",
            description: "Ask Trump anything. Let's see, what do the Trump thinks about your idea",
            throttling: {
                usages: 1,
                duration: 3
            },
            usage: ["<prefix>trumpquote <question>"]
        });
    }

    async run(msg) {
        if (msg.guild && !msg.channel.permissionsFor(msg.guild.me).has(["SEND_MESSAGES", "VIEW_CHANNEL"])) return;
        const { text } = await get("https://api.whatdoestrumpthink.com/api/v1/quotes/random").catch(() => msg.say("There was an error, I think a cat has cut the wire off, dogs don't do that."));
        const root = parse(text);
        const article = root.querySelector("#z");
        return msg.reply(`Trump says: ${article.childNodes[0].rawText}`);
    }

};